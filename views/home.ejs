<%- include('partials/header') -%>
<div class="container">
  <div class="row mt-5">
    <div class="col">
      <div>
        <p><strong>User Name</strong>: <%= user.userName %></p>
        <p><strong>Email</strong>: <%= user.email %></p>
        <a href="/logout" class="col-12 btn btn-primary">Logout</a>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-12">
      <div class="mt-5">
        <h2>Add a gift</h2>
        <form action="/gift/addGift" method="POST">
          <div class="mb-3">
            <label for="gift" class="form-label">Gift</label>
            <input type="text" class="form-control" id="gift" name="gift">
          </div>
          <div class="mb-3">
            <label for="link" class="form-label">Link</label>
            <input class="form-control" id="link" name="link"></input>
          </div>
          <div class="mb-3">
            <label for="note" class="form-label">Notes</label>
            <textarea class="form-control" id="note" name="note"></textarea>
          </div>
          <button type="submit" class="btn btn-primary" value="Upload">Submit</button>
        </form>
      </div>
    </div>
  </div>

  <div class="row mt-5">
    <div class="col-12">
      <h2>Wishlist</h2>
      <table class="col-12 table">
        <tr class="col-12 justify-content-center ">
          <th>Gift</th>
          <th class="text-center">Note</th>
          <th class="">Claimed?</th>
          <th>Claimed By</th>
        </tr>
        <% for(let i=0; i<gifts.length; i++) {%>
          <tr class="col-12">
            <td class="align-text-center">
              <a href="<%= gifts[i].link %>" target="_blank"> <%= gifts[i].gift %></a>
            </td>
            <td class="align-text-center"> <%= gifts[i].note %> </td>
            <td class="align-text-center">
              <% if(!gifts[i].claimedBy){ %>
                <form action="/gift/claimGift/<%= gifts[i].id %>?_method=PUT" method="POST">
                  <button type="submit" class="btn btn-primary">Claim!</button>
                </form>
                <% }else if(gifts[i].claimedBy.id === user.id){ %>
                  <form action="/gift/unclaimGift/<%= gifts[i].id %>?_method=PUT" method="POST">
                    <button type="submit" class="btn btn-warning">Unclaim</button>
                  </form>
                <% }else{ %>
                  <button class="btn btn-secondary">Already Claimed</button>
                <% } %>
            </td>
            <td class="align-text-center" data-id=" <%= gifts[i]._id%>"> 
              <% if(gifts[i].claimed) { %>
              <%= gifts[i].claimedBy.userName %> 
              <% }else{%> 
                <form action="/gift/deleteGift/<%= gifts[i].id %>?_method=DELETE" method="POST">
                  <button type="submit" class="btn btn-danger">Delete Gift</button>
                </form> 
                <% } %>
            </td>

          </tr>
        <% } %>
      </table>
    </div>
  </div>

  <div class="row mt-5">
    <div class="col-12">
      <h2>Friends</h2>
      <table class="col-12 table">
        <tr>
          <th>Friend</th>
          <th>Birthday</th>
        </tr>
        <% for(let i = 0; i < friendList.friends.length; i++){ %>
          <tr>
            <td>
              <a href="/profile/<%= friendList.friends[i].id %>"> <%=friendList.friends[i].userName %></a>
            </td>
            <td><%= friendList.friends[i].birthday %></td>
          </tr>
        <% } %>
      </table>
    </div>
  </div>

  <div class="mt-5">
    <div class="col-4">
      <div>
        <form action="/friend/addFriend/?_method=PUT" method="POST">
          <div class="mb-3">
            <label for="newFriendId" class="form-label">New Friend ID</label>
            <input class="form-control" id="newFriendId" name="newFriendId"></input>
          </div>
          <button type="submit" class="btn btn-primary" value="Upload">Add Friend</button>
        </form>
      </div>
    </div>
  </div>

</div>
<%- include('partials/footer') -%>

